@model FilmSearch.Models.Movie
@{
    ViewData["Title"] = "Оценка фильма";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning">
                <h3 class="card-title mb-0 text-white">Оцените фильм</h3>
            </div>
            <div class="card-body">
                @if (Model != null)
                {
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Title" style="max-height: 300px;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 300px;">
                                    <span class="text-muted">Нет изображения</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h2>@Model.Title</h2>
                            <p class="text-muted">@Model.Year · @Model.Genre</p>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mb-4">
                                    <h5>Описание:</h5>
                                    <p class="card-text">@Model.Description</p>
                                </div>
                            }

                            <div class="rating-section">
                                <h5>Ваша оценка:</h5>
                                <form method="post" action="@Url.Action("Rate", "Movie")" class="rating-form">
                                    <input type="hidden" name="movieId" value="@Model.Id">

                                    <div class="rating-stars mb-4">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <button type="submit" name="rating" value="@i"
                                                    class="btn btn-outline-warning rating-btn"
                                                    data-rating="@i"
                                                    onmouseover="highlightStars(@i)"
                                                    onmouseout="resetStars()">
                                                <span class="star-text">@i ★</span>
                                            </button>
                                        }
                                    </div>

                                    <div class="rating-labels d-flex justify-content-between mb-3">
                                        <small class="text-muted">Плохо</small>
                                        <small class="text-muted">Отлично</small>
                                    </div>
                                </form>

                                <div class="rating-descriptions">
                                    <div class="alert alert-light">
                                        <small>
                                            <strong>Как мы используем ваши оценки:</strong><br>
                                            • Улучшаем персонализированные рекомендации<br>
                                            • Анализируем предпочтения для подбора похожих фильмов<br>
                                            • Помогаем другим пользователям найти интересный контент
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h5>Фильм не найден</h5>
                        <p>Извините, запрашиваемый фильм не существует или был удален.</p>
                        <a href="@Url.Action("Index", "Movie")" class="btn btn-primary">Вернуться к каталогу</a>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Movie")" class="btn btn-outline-secondary">
                    ← Назад к каталогу
                </a>
                <a href="@Url.Action("Index", "Recommendation")" class="btn btn-outline-primary">
                    Посмотреть рекомендации →
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function highlightStars(rating) {
            const stars = document.querySelectorAll('.rating-btn');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('btn-warning');
                    star.classList.remove('btn-outline-warning');
                } else {
                    star.classList.remove('btn-warning');
                    star.classList.add('btn-outline-warning');
                }
            });
        }

        function resetStars() {
            const stars = document.querySelectorAll('.rating-btn');
            stars.forEach(star => {
                star.classList.remove('btn-warning');
                star.classList.add('btn-outline-warning');
            });
        }

        // Добавляем обработчики для кнопок рейтинга
        document.querySelectorAll('.rating-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                const rating = this.getAttribute('data-rating');
                const movieTitle = '@Model.Title';

                // Можно добавить подтверждение или анимацию
                console.log(`Оценка ${rating} для фильма "${movieTitle}"`);
            });
        });
    </script>
}
