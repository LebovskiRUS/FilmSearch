@model List<Movie>

@{
    ViewData["Title"] = "Все фильмы";
}

<h2>Каталог фильмов</h2>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                    <p class="card-text"><strong>Жанр:</strong> @movie.Genre</p>
                    <p class="card-text">@movie.Description</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Rate", "Movie", new { movieId = movie.Id })"
                           class="btn btn-primary">Оценить фильм</a>

                        <div class="rating-info">
                            <small class="text-muted">Нажмите чтобы поставить оценку</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>