<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Рекомендации фильмов</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">🎬 FilmRec</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="navbar-nav me-auto">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Главная</a>
                    <a class="nav-link" href="@Url.Action("About", "Home")">О системе</a>
                    <a class="nav-link" href="@Url.Action("Index", "Movie")">Фильмы</a>
                    <a class="nav-link" href="@Url.Action("Index", "Recommendation")">Рекомендации</a>
                </div>

                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="@Url.Action("Login", "Account")">Войти</a>
                    <a class="nav-link" href="@Url.Action("Register", "Account")">Регистрация</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2024 Рекомендательная система фильмов. На основе ИИ.</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("About", "Home")" class="text-white me-3">О системе</a>
                    <a href="@Url.Action("Index", "Movie")" class="text-white me-3">Фильмы</a>
                    <a href="@Url.Action("Index", "Recommendation")" class="text-white">Рекомендации</a>
                </div>
            </div>
        </div>
    </footer>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>